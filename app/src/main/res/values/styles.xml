<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearanceToolbar">
        <item name="android:textAppearance">@style/TitleAppearance</item>
    </style>

    <style name="HeadlineAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="SubHeadingAppearance" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TitleAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="BodyAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="CaptionAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="ButtonAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ToolBarWithNavigationBack">
        <item name="android:background">@color/colorPrimary</item>
        <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>
        <item name="android:textAppearance">@style/TitleAppearance</item>
    </style>

</resources>
