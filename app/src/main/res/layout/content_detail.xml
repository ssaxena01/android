<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/half_margin"
        android:src="@drawable/ic_restaurant_menu_black_24dp" />

    <TextView
        android:id="@+id/description_view"
        style="@style/SubHeadingAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cover_image"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/half_margin"
        android:text="name" />

    <TextView
        android:id="@+id/status_view"
        style="@style/CaptionAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_view"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/half_margin"
        android:text="open" />

    <TextView
        android:id="@+id/price_view"
        style="@style/CaptionAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_view"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/half_margin"
        android:text="0.0" />

    <Button
        android:id="@+id/add_to_favorite"
        style="@style/ButtonAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_view"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/half_margin"
        android:text="@string/add_to_favorite"
        android:textAllCaps="false"
        android:textColor="@color/whiteSmoke" />

</RelativeLayout>
